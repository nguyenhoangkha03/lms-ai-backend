# Application
NODE_ENV=staging
PORT=3000
API_VERSION=v1

# Database
DATABASE_HOST=staging-mysql.amazonaws.com
DATABASE_PORT=3306
DATABASE_NAME=lms_ai_staging
DATABASE_USER=staging_user
DATABASE_PASSWORD=${DATABASE_PASSWORD}

# Redis
REDIS_HOST=staging-redis.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# JWT
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d

# AWS
AWS_REGION=us-east-1
AWS_S3_BUCKET=lms-ai-staging-uploads

# External Services
OPENAI_API_KEY=${OPENAI_API_KEY}
SENDGRID_API_KEY=${SENDGRID_API_KEY}

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
LOG_LEVEL=debug

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_VIDEO_CALLS=true
ENABLE_ANALYTICS=true