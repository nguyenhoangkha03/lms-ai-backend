{
  "name": "lms-ai-backend",
  "version": "1.0.0",
  "description": "AI-Powered Learning Management System Backend",
  "author": "Akaisui",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "jest --testPathPattern=src.*\\.spec\\.ts$",
    "test:integration": "jest --config ./test/jest-integration.json",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:performance": "jest --config ./test/jest-performance.json",
    "test:security": "jest --config ./test/jest-security.json",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance && npm run test:security",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:mutation": "stryker run",
    "test:visual": "jest --config ./test/jest-visual.json",
    "test:parallel": "jest --maxWorkers=4",
    "test:watch:ci": "jest --watch --ci",
    "test:contract": "jest --config ./test/jest-contract.json",
    "test:smoke": "jest --config ./test/jest-smoke.json",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -d src/database/data-source.ts",
    "migration:create": "npm run typeorm -- migration:create -d src/database/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/database/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/database/data-source.ts",
    "migration:show": "npm run typeorm -- migration:show -d src/database/data-source.ts",
    "dev": "bash scripts/dev.sh",
    "prod": "chmod +x scripts/prod.sh && ./scripts/prod.sh",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "seed": "ts-node -r tsconfig-paths/register src/database/seeds/run-seeds.ts",
    "seed:run": "ts-node -r tsconfig-paths/register src/database/seeds/run-notification-seeder.ts",
    "db:setup": "bash scripts/db-setup.sh",
    "db:migrate": "chmod +x scripts/db-migrate.sh && ./scripts/db-migrate.sh",
    "db:backup": "bash scripts/db-backup.sh",
    "db:restore": "chmod +x scripts/db-restore.sh && ./scripts/db-restore.sh",
    "db:reset": "npm run migration:revert && npm run migration:run && npm run seed",
    "prepare": "husky install",
    "auth:test": "jest --testPathPattern=auth --coverage",
    "security:test": "jest --testPathPattern=security --coverage",
    "ssl:generate": "chmod +x scripts/generate-ssl.sh && ./scripts/generate-ssl.sh",
    "ssl:verify": "openssl x509 -in ssl/certificate.crt -text -noout",
    "security:audit": "npm audit && npm audit fix",
    "security:check": "npm run lint && npm run test && npm run security:audit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/lib-storage": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "@faker-js/faker": "^9.9.0",
    "@liaoliaots/nestjs-redis": "^10.0.0",
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/bull": "^11.0.2",
    "@nestjs/cache-manager": "^2.3.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.2.6",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^5.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^10.4.19",
    "@sendgrid/mail": "^8.1.5",
    "@types/cache-manager": "^5.0.0",
    "archiver": "^7.0.1",
    "autocannon": "^8.0.0",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "cache-manager": "^5.7.6",
    "cache-manager-redis-yet": "^5.1.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "express-rate-limit": "^7.5.1",
    "firebase-admin": "^13.4.0",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "jest-mock-extended": "^4.0.0",
    "jsdom": "^26.1.0",
    "lz-string": "^1.5.0",
    "mailgun-js": "^0.22.0",
    "multer": "^2.0.1",
    "mysql2": "^3.14.1",
    "natural": "^8.1.0",
    "nest-winston": "^1.9.4",
    "nestjs-typeorm-paginate": "^4.1.0",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.2",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "stripe": "^18.4.0",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^5.7.3",
    "typeorm": "^0.3.25",
    "uuid": "^11.1.0",
    "web-push": "^3.6.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
