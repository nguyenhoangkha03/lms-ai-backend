# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USERNAME=root
DATABASE_PASSWORD=
DATABASE_NAME=lms_ai_database
DATABASE_SSL=false

# Database Optimization
DB_CONNECTION_LIMIT=20
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Cache Database Numbers
REDIS_CACHE_DB=0
REDIS_SESSION_DB=1
REDIS_TYPEORM_CACHE_DB=2

# Monitoring
MONITORING_ENABLED=true
METRICS_COLLECTION_INTERVAL=300000
PERFORMANCE_ALERTS=true

# Optimization
AUTO_OPTIMIZE_TABLES=true
OPTIMIZE_SCHEDULE=0 2 * * *

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=7d

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILENAME=app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# Security
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100
SECURITY_HELMET=true
SECURITY_COMPRESSION=true

# AI Service
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_TIMEOUT=30000

# Email (sẽ được cấu hình trong các phần sau)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# File Storage (S3/MinIO - sẽ được cấu hình sau)
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=